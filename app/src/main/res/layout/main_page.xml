<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_calories"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_gradient_stroke"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/main_button"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_splash_screen"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_calories" />

    <TextView
        android:id="@+id/text_view_goal"
        style="@style/TextViewWorkoutsSETS"
        android:layout_width="0dp"

        android:layout_height="32dp"
        android:text="1500"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_calories"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toLeftOf="@id/text_view_calories"
        app:layout_constraintRight_toLeftOf="@+id/text_view_food"
        app:layout_constraintTop_toTopOf="@+id/text_view_calories" />

    <TextView
        android:id="@+id/text_view_food"
        style="@style/TextViewWorkoutsSETS"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@color/white"
        android:text="1500"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_view_goal"
        app:layout_constraintRight_toRightOf="@id/text_view_exercise"
        app:layout_constraintTop_toTopOf="@+id/text_view_goal" />

    <TextView
        android:id="@+id/text_view_exercise"
        style="@style/TextViewWorkoutsSETS"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@color/white"
        android:text="40"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_view_food"
        app:layout_constraintRight_toLeftOf="@id/text_view_remaining"
        app:layout_constraintTop_toTopOf="@+id/text_view_food" />

    <TextView
        android:id="@+id/text_view_remaining"
        style="@style/TextViewWorkoutsSETS"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="40"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_view_exercise"
        app:layout_constraintRight_toRightOf="@id/text_view_calories"
        app:layout_constraintTop_toTopOf="@+id/text_view_exercise" />

    <TextView
        android:id="@+id/title_calories"
        style="@style/TextViewBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Calories"
        app:layout_constraintStart_toStartOf="@+id/text_view_calories"
        app:layout_constraintTop_toTopOf="@+id/text_view_calories" />

    <TextView
        android:id="@+id/text_goal"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="Goal"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_calories"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toLeftOf="@id/text_view_calories"
        app:layout_constraintRight_toLeftOf="@+id/text_food"
        app:layout_constraintTop_toBottomOf="@+id/text_view_goal" />

    <TextView
        android:id="@+id/text_food"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="Food"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_goal"
        app:layout_constraintRight_toLeftOf="@id/text_exercise"
        app:layout_constraintTop_toTopOf="@+id/text_goal" />

    <TextView
        android:id="@+id/text_exercise"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="Exercise"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_food"
        app:layout_constraintRight_toLeftOf="@id/text_remaining"
        app:layout_constraintTop_toTopOf="@+id/text_food" />

    <TextView
        android:id="@+id/text_remaining"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="Remaining"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintLeft_toRightOf="@+id/text_exercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_exercise" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

