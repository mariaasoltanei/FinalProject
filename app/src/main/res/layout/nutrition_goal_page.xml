<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view_nutrition_goals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/jewel"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:id="@+id/text_view_nutrition_goals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_green_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline2"/>

    <TextView
        android:id="@+id/text_view_nutr_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Calories"
        style="@style/TextViewBold"
        app:layout_constraintLeft_toLeftOf="@id/text_view_nutrition_goals"
        app:layout_constraintTop_toTopOf="@id/text_view_nutrition_goals"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintRight_toLeftOf="@id/nutr_calories_change"/>

    <TextView
        android:id="@+id/nutr_calories_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="calories"
        android:textSize="24sp"
        style="@style/TextviewStyle"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_nutr_calories"
        app:layout_constraintBottom_toBottomOf="@id/text_view_nutr_calories"
        app:layout_constraintRight_toRightOf="@id/text_view_nutrition_goals"/>

    <TextView
        android:id="@+id/text_view_nutr_carbs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Carbs"
        style="@style/TextViewBold"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/text_view_nutr_calories"
        app:layout_constraintBottom_toBottomOf="@id/nutr_carbs_change"
        app:layout_constraintRight_toLeftOf="@id/nutr_carbs_change"
        app:layout_constraintLeft_toLeftOf="@id/text_view_nutrition_goals"/>

    <EditText
        android:id="@+id/nutr_carbs_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="carbs"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:textSize="24sp"
        style="@style/TextviewStyle"
        android:backgroundTint="@color/white"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/nutr_calories_change"
        app:layout_constraintLeft_toRightOf="@id/text_view_nutr_carbs"
        app:layout_constraintBottom_toBottomOf="@id/text_view_nutr_carbs"
        app:layout_constraintRight_toRightOf="@id/text_view_nutrition_goals"/>

    <TextView
        android:id="@+id/text_view_nutr_protein"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Protein"
        style="@style/TextViewBold"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/text_view_nutr_carbs"
        app:layout_constraintBottom_toBottomOf="@id/nutr_protein_change"
        app:layout_constraintRight_toLeftOf="@id/nutr_protein_change"
        app:layout_constraintLeft_toLeftOf="@id/text_view_nutrition_goals"/>

    <EditText
        android:id="@+id/nutr_protein_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="protein"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:inputType="number"
        android:backgroundTint="@color/white"
        style="@style/TextviewStyle"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/nutr_carbs_change"
        app:layout_constraintLeft_toRightOf="@id/text_view_nutr_protein"
        app:layout_constraintBottom_toBottomOf="@id/text_view_nutr_protein"
        app:layout_constraintRight_toRightOf="@id/text_view_nutrition_goals"/>

    <TextView
        android:id="@+id/text_view_nutr_fat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fat"
        style="@style/TextViewBold"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/text_view_nutr_protein"
        app:layout_constraintBottom_toBottomOf="@id/nutr_fat_change"
        app:layout_constraintRight_toLeftOf="@id/nutr_fat_change"
        app:layout_constraintLeft_toLeftOf="@id/text_view_nutrition_goals"/>

    <EditText
        android:id="@+id/nutr_fat_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="43"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:textSize="24sp"
        style="@style/TextviewStyle"
        android:backgroundTint="@color/white"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintTop_toBottomOf="@id/nutr_protein_change"
        app:layout_constraintLeft_toRightOf="@id/text_view_nutr_fat"
        app:layout_constraintBottom_toBottomOf="@id/text_view_nutr_fat"
        app:layout_constraintRight_toRightOf="@id/text_view_nutrition_goals"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/jewel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/save_nutrition_goals"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_home">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_nutrition_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/jewel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_button"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_check_24">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.constraintlayout.widget.ConstraintLayout>