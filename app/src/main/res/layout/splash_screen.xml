<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash_screen">

    <View
        android:id="@+id/running_girl"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:background="@drawable/splash_screnn_girl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitsquare"
        style="@style/TextviewStyleSplashScreen"
        app:layout_constraintTop_toBottomOf="@id/running_girl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login"/>

    <Button
        android:id="@+id/login"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        style="@style/TextViewWorkoutsSETS"
        android:background="@drawable/login_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/running_girl"/>

    <Button
        android:id="@+id/create_account"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Create an account"
        style="@style/TextViewWorkoutsSETS"
        android:background="@drawable/create_account_button"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>