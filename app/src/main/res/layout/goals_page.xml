<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_workout"
        android:text="Goals"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        style="@style/TextViewBold"/>

    <Button
        android:id="@+id/weight_goal_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Weight goal"
        android:background="@drawable/menu_buttons"/>

    <Button
        android:id="@+id/nutrition_goal_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Nutrition goal"
        android:layout_margin="16dp"
        android:background="@drawable/menu_buttons"/>

    <Button
        android:id="@+id/fitness_goal_btn"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Fitness goal"
        android:background="@drawable/menu_buttons"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/jewel"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_home">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</LinearLayout>