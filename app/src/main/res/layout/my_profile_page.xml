<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_my_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/jewel"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <ImageView
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:src="@drawable/profile_photo"
        app:layout_constraintBottom_toBottomOf="@id/view_my_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:id="@+id/text_view_my_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_green_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1">

    </TextView>

    <TextView
        android:id="@+id/text_view_username"
        style="@style/TextViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="@id/text_view_username_change"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_username_change"
        app:layout_constraintTop_toTopOf="@id/text_view_my_profile" />

    <TextView
        android:id="@+id/text_view_username_change"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/username"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_username"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline1" />

    <TextView
        android:id="@+id/text_view_weight"
        style="@style/TextViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/weight"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_weight_change"
        app:layout_constraintTop_toBottomOf="@id/text_view_username" />
    <TextView
        android:id="@+id/text_view_weight_change"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/weight"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_weight"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_weight"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_view_height"
        style="@style/TextViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Height"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_height_change"
        app:layout_constraintTop_toBottomOf="@id/text_view_weight" />
    <TextView
        android:id="@+id/text_view_height_change"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="height"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_height"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_height"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_view_sex"
        style="@style/TextViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Sex"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_sex_change"
        app:layout_constraintTop_toBottomOf="@id/text_view_height" />
    <TextView
        android:id="@+id/text_view_sex_change"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="sex"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_sex"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_sex"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_view_birth"
        style="@style/TextViewBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Date of Birth"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_view_birth_change"
        app:layout_constraintTop_toBottomOf="@id/text_view_sex" />
    <TextView
        android:id="@+id/text_view_birth_change"
        style="@style/TextviewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="date of birth"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_birth"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@id/text_view_birth"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/jewel"
        android:src="@drawable/ic_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/save_changes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_button"
        android:background="@color/jewel"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_check_24">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>