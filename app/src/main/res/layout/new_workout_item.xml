<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter workout name"
        android:inputType="textAutoComplete"
        android:layout_margin="16dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/edit_workout_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter workout reps"
        android:inputType="textAutoComplete"
        android:layout_margin="16dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/edit_workout_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter workout sets"
        android:inputType="textAutoComplete"
        android:layout_margin="16dp"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/edit_workout_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="8dp"
        android:fontFamily="sans-serif-light"
        android:hint="Enter workout calories"
        android:inputType="textAutoComplete"
        android:layout_margin="16dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_save_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_buttons"
        android:text="Save"
        android:layout_margin="16dp"
        android:textColor="@color/black" />

</LinearLayout>